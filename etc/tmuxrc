#bind-key C-c run "echo $DISPLAY"
#bind-key C-v run "tmux set-buffer "$(xclip -o -sel clipboard)"; tmux paste-buffer"
# bind y run-shell -b "tmux save-buffer - | xclip -selection clipboard &>/dfev/null; tmux display-message 'saved to clipboard'"
